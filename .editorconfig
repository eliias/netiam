# EditorConfig is awesome: http://EditorConfig.org
root = true

[*]
end_of_line = lf
insert_final_newline = true
charset = utf-8
indent_style = space
trim_trailing_whitespace = true
max_line_length = 120

[*.js]
indent_size = 2
quote_type = single

# Matches the exact files either package.json or .travis.yml
[{.jshintrc,package.json,.travis.yml}]
indent_style = space
indent_size = 2
