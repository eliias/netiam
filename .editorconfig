# EditorConfig is awesome: http://EditorConfig.org
root = true

[*]
end_of_line = lf
insert_final_newline = true
charset = utf-8
trim_trailing_whitespace = true
max_line_length = 120

[Makefile]
indent_style = tab
indent_size = 8

[*.js]
indent_style = space
indent_size = 2
quote_type = single

[{.jshintrc,package.json,.travis.yml}]
indent_style = space
indent_size = 2
